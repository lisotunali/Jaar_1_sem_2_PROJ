            fx:controller="GUI.Controllers.Account.LoginController">
    <center>
        <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <TextField fx:id="nameInput"/>
                <PasswordField fx:id="passwordInput"/>
            </children>
            <BorderPane.margin>
                <Insets right="30.0"/>
            </BorderPane.margin>
        </VBox>
      <VBox prefHeight="253.0" prefWidth="622.0" spacing="10.0" BorderPane.alignment="CENTER">
