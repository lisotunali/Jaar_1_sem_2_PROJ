            <TextField fx:id="nameInput" prefHeight="75.0" prefWidth="622.0">
               <font>
                  <Font size="24.0" />
               </font>
            </TextField>
            <PasswordField fx:id="passwordInput" onKeyPressed="#enterPressed" prefHeight="75.0" prefWidth="640.0">
               <font>
                  <Font size="24.0" />
               </font>
            </PasswordField>
         </children>
         <BorderPane.margin>
            <Insets right="30.0" />
         </BorderPane.margin>
      </VBox>
