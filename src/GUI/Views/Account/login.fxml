   <left>
      <VBox prefHeight="342.0" prefWidth="118.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label prefHeight="75.0" prefWidth="121.0" text="Name:" textFill="#0f9bd1">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <Label prefHeight="75.0" prefWidth="122.0" text="Password:" textFill="#ff7a00">
               <font>
                  <Font size="24.0" />
