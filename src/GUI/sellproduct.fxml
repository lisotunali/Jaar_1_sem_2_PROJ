<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="600.0"
            minWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1"
            fx:controller="GUI.controllers.Marketplace.ViewProductController">
    <children>
        <VBox alignment="CENTER" prefHeight="74.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <Label alignment="CENTER" prefHeight="58.0" prefWidth="369.0" text="Your offers">
                            <font>
                                <Font size="40.0"/>
                            </font>
                        </Label>
                    </children>
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                </HBox>
                <GridPane alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" VBox.vgrow="ALWAYS">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="358.0" minWidth="10.0" prefWidth="350.0"/>
                        <ColumnConstraints hgrow="ALWAYS" maxWidth="262.0" minWidth="10.0" prefWidth="83.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="359.0" minWidth="10.0" prefWidth="300.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" percentHeight="0.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Pane prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        <TableView fx:id="thisProductTableView" prefHeight="200.0" prefWidth="358.0">
                            <columns>
                                <TableColumn fx:id="thisTitleColumn" prefWidth="150.0" text="Product"/>
                                <TableColumn fx:id="thisAmountColumn" prefWidth="100.0" text="Amount"/>
                                <TableColumn fx:id="thisInitialPriceColumn" prefWidth="75.0" text="Initial price"/>
                                <TableColumn fx:id="thisDescColumn" prefWidth="300.0" text="Description"/>
                            </columns>
                        </TableView>
                        <GridPane alignment="BASELINE_LEFT" GridPane.rowIndex="1">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="0.0"
                                                   prefWidth="175.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints/>
                                <RowConstraints minHeight="10.0" percentHeight="0.0" prefHeight="30.0"
                                                vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <Button id="backButton" fx:id="backButton" mnemonicParsing="false"
                                        onAction="#prevScreen" prefHeight="40.0" prefWidth="400.0" text="Back"
                                        GridPane.rowIndex="1"/>
                            </children>
                        </GridPane>
                        <TableView fx:id="sellTable" prefWidth="343.0" GridPane.columnIndex="2">
                            <columns>
                                <TableColumn fx:id="buyerColumn" prefWidth="175.0" text="Highest bidder"/>
                                <TableColumn fx:id="bidColumn" prefWidth="125.0" sortType="DESCENDING" text="Bid (â‚¬)"/>
                            </columns>
                        </TableView>
                        <GridPane alignment="BOTTOM_RIGHT" GridPane.columnIndex="2" GridPane.rowIndex="1">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="0.0"
                                                   prefWidth="150.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="0.0"
                                                   prefWidth="75.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints/>
                                <RowConstraints minHeight="10.0" percentHeight="0.0" prefHeight="30.0"
                                                vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <Button fx:id="acceptButton" mnemonicParsing="false" onAction="#acceptBid"
                                        prefHeight="40.0" prefWidth="400.0" text="Accept bid" GridPane.rowIndex="1"/>
                            </children>
                        </GridPane>
                    </children>
                    <cursor>
                        <Cursor fx:constant="DEFAULT"/>
                    </cursor>
                </GridPane>
            </children>
        </VBox>
    </children>
</AnchorPane>
