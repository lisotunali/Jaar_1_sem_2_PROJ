<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity" prefHeight="554.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1"
            fx:controller="GUI.controllers.Account.profileController">
    <center>
        <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <GridPane>
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES"/>
                        <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308" minWidth="10.0"
                                           prefWidth="426.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <TextField fx:id="nameInput" editable="false" GridPane.columnIndex="1">
                            <GridPane.margin>
                                <Insets left="10.0"/>
                            </GridPane.margin>
                        </TextField>
                        <PasswordField fx:id="passwordInput" GridPane.columnIndex="1" GridPane.rowIndex="2">
                            <GridPane.margin>
                                <Insets left="10.0"/>
                            </GridPane.margin>
                        </PasswordField>
                        <PasswordField fx:id="passwordConfirmInput" GridPane.columnIndex="1" GridPane.rowIndex="3">
                            <GridPane.margin>
                                <Insets left="10.0"/>
                            </GridPane.margin>
                        </PasswordField>
                        <Label text="Name:"/>
                        <Label text="Password:" GridPane.rowIndex="2"/>
                        <Label text="Confirm password:" GridPane.rowIndex="3"/>
                        <Label text="Change password:" GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <GridPane.margin>
                                <Insets left="10.0"/>
                            </GridPane.margin>
                        </Label>
                    </children>
                </GridPane>
                <Label text="Personal data:"/>
                <TextArea fx:id="personalData" prefHeight="158.0" prefWidth="440.0"/>
            </children>
            <BorderPane.margin>
                <Insets left="30.0" right="30.0"/>
            </BorderPane.margin>
        </VBox>
    </center>
    <top>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="PROFILE" BorderPane.alignment="CENTER">
            <font>
                <Font size="80.0"/>
            </font>
            <BorderPane.margin>
                <Insets bottom="50.0"/>
            </BorderPane.margin>
        </Text>
    </top>
    <bottom>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="600.0" spacing="50.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="loginButton" mnemonicParsing="false" onAction="#onUpdateClicked" text="Update">
                    <font>
                        <Font size="20.0"/>
                    </font>
                </Button>
                <Button fx:id="registerButton" mnemonicParsing="false" onAction="#onBackClicked" text="Back">
                    <font>
                        <Font size="20.0"/>
                    </font>
                </Button>
            </children>
            <BorderPane.margin>
                <Insets/>
            </BorderPane.margin>
        </HBox>
    </bottom>
</BorderPane>
