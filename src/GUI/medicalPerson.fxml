<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="600.0"
            minWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" fx:controller="GUI.MedicalController">
    <children>
        <VBox prefHeight="74.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <HBox alignment="CENTER" minHeight="75.0" minWidth="200.0" prefHeight="75.0" prefWidth="200.0">
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                    <children>
                        <Label text="Medical">
                            <font>
                                <Font size="40.0"/>
                            </font>
                        </Label>
                    </children>
                </HBox>
                <HBox alignment="BOTTOM_CENTER" minHeight="50.0" prefHeight="50.0" prefWidth="200.0">
                    <children>
                        <Label text="Appointments">
                            <font>
                                <Font size="20.0"/>
                            </font>
                            <HBox.margin>
                                <Insets bottom="5.0"/>
                            </HBox.margin>
                        </Label>
                    </children>
                </HBox>
                <BorderPane prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                    <center>
                        <TableView fx:id="appointmentTableView" prefHeight="200.0" prefWidth="350.0"
                                   BorderPane.alignment="CENTER">
                            <columns>
                                <TableColumn fx:id="NameColumn" minWidth="118.0" prefWidth="-1.0" text="Doctor"/>
                                <TableColumn fx:id="conditionColumn" minWidth="181.0" prefWidth="-1.0"
                                             text="About appointment"/>
                                <TableColumn fx:id="dateColumn" minWidth="180.0" prefWidth="-1.0" text="Date"/>
                                <TableColumn fx:id="doneColumn" minWidth="75.0" prefWidth="-1.0" text="Done"/>
                            </columns>
                        </TableView>
                    </center>
                    <right>
                        <VBox prefHeight="200.0" prefWidth="125.0" BorderPane.alignment="CENTER"/>
                    </right>
                    <left>
                        <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="125.0"
                              BorderPane.alignment="CENTER">
                            <padding>
                                <Insets left="10.0"/>
                            </padding>
                            <children>
                                <CheckBox fx:id="showDoneCheck" mnemonicParsing="false" onAction="#filterAppointments"
                                          selected="true" text="Show done"/>
                                <CheckBox fx:id="showNotDoneCheck" mnemonicParsing="false"
                                          onAction="#filterAppointments" selected="true" text="Show not done"/>
                            </children>
                        </VBox>
                    </left>
                </BorderPane>
                <GridPane alignment="CENTER">
                    <columnConstraints>
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Button fx:id="backButton" alignment="CENTER" mnemonicParsing="false" onAction="#mainScreen"
                                prefHeight="30.0" prefWidth="150.0" text="Back"/>
                        <Button fx:id="requestButton" alignment="CENTER" mnemonicParsing="false"
                                onAction="#requestButtonPressed" prefHeight="30.0" prefWidth="150.0"
                                text="Request appointment" GridPane.columnIndex="1"/>
                    </children>
                </GridPane>
            </children>
        </VBox>
    </children>
</AnchorPane>
