<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1"
            fx:controller="GUI.LoginController">
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="nameInput"/>
            <PasswordField fx:id="passwordInput"/>
         </children>
         <BorderPane.margin>
            <Insets right="30.0"/>
         </BorderPane.margin>
      </VBox>
   </center>
   <left>
      <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Name:"/>
            <Label text="Password:"/>
         </children>
         <opaqueInsets>
            <Insets/>
         </opaqueInsets>
         <BorderPane.margin>
            <Insets left="30.0"/>
         </BorderPane.margin>
      </VBox>
   </left>
   <top>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="LOGIN" BorderPane.alignment="CENTER">
         <font>
            <Font size="80.0"/>
         </font>
         <BorderPane.margin>
            <Insets bottom="50.0"/>
         </BorderPane.margin>
      </Text>
   </top>
   <bottom>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="loginButton" mnemonicParsing="false" onAction="#loginButtonClicked" text="Login"/>
            <Button fx:id="registerButton" mnemonicParsing="false" onAction="#registerButtonClicked" text="Register"/>
         </children>
         <BorderPane.margin>
            <Insets/>
         </BorderPane.margin>
      </HBox>
   </bottom>
</BorderPane>
