<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="600.0"
            minWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1"
            fx:controller="GUI.ViewSelectedAppointmentController">
    <children>
        <VBox prefHeight="74.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <HBox alignment="CENTER" minHeight="75.0" minWidth="200.0" prefHeight="75.0" prefWidth="200.0">
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                    <children>
                        <Label text="Medical (Doctor)">
                            <font>
                                <Font size="40.0"/>
                            </font>
                        </Label>
                    </children>
                </HBox>
                <HBox alignment="BOTTOM_CENTER" minHeight="50.0" prefHeight="50.0" prefWidth="200.0">
                    <children>
                        <Label text="Selected appointment">
                            <font>
                                <Font size="20.0"/>
                            </font>
                            <HBox.margin>
                                <Insets bottom="5.0"/>
                            </HBox.margin>
                        </Label>
                    </children>
                </HBox>
                <AnchorPane prefHeight="322.0" prefWidth="600.0" VBox.vgrow="ALWAYS">
                    <children>
                        <GridPane layoutX="200.0" layoutY="14.0" prefHeight="314.0" prefWidth="400.0"
                                  AnchorPane.bottomAnchor="117.0" AnchorPane.leftAnchor="200.0"
                                  AnchorPane.rightAnchor="200.0" AnchorPane.topAnchor="14.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="181.0" minWidth="120.0"
                                                   prefWidth="120.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="213.0" minWidth="180.0"
                                                   prefWidth="213.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints maxHeight="111.0" minHeight="0.0" prefHeight="66.0" vgrow="SOMETIMES"/>
                                <RowConstraints maxHeight="126.0" minHeight="10.0" prefHeight="105.0"
                                                vgrow="SOMETIMES"/>
                                <RowConstraints maxHeight="241.0" minHeight="10.0" prefHeight="59.0" vgrow="SOMETIMES"/>
                                <RowConstraints maxHeight="234.0" minHeight="10.0" prefHeight="59.0" vgrow="SOMETIMES"/>
                                <RowConstraints maxHeight="234.0" minHeight="10.0" prefHeight="59.0" vgrow="SOMETIMES"/>
                                <RowConstraints maxHeight="241.0" minHeight="10.0" prefHeight="59.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <Label text="Patient name:">
                                    <font>
                                        <Font size="18.0"/>
                                    </font>
                                </Label>
                                <Label layoutX="10.0" layoutY="20.0" text="Condition:" GridPane.rowIndex="1">
                                    <font>
                                        <Font size="18.0"/>
                                    </font>
                                </Label>
                                <Label layoutX="10.0" layoutY="28.0" text="Date:" GridPane.rowIndex="3">
                                    <font>
                                        <Font size="18.0"/>
                                    </font>
                                </Label>
                                <Label layoutX="10.0" layoutY="82.0" text="Required specialty:" GridPane.rowIndex="2">
                                    <font>
                                        <Font size="18.0"/>
                                    </font>
                                </Label>
                                <Label layoutX="10.0" layoutY="201.0" text="Time:" GridPane.rowIndex="4">
                                    <font>
                                        <Font size="18.0"/>
                                    </font>
                                </Label>
                                <Label layoutX="10.0" layoutY="232.0" text="Done:" GridPane.rowIndex="5">
                                    <font>
                                        <Font size="18.0"/>
                                    </font>
                                </Label>
                                <TextField fx:id="patientName" editable="false" GridPane.columnIndex="1"/>
                                <TextArea fx:id="conditionArea" prefHeight="200.0" GridPane.columnIndex="1"
                                          GridPane.rowIndex="1"/>
                                <DatePicker fx:id="dateText" prefHeight="25.0" prefWidth="213.0"
                                            GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                                <CheckBox fx:id="doneCheck" mnemonicParsing="false" GridPane.columnIndex="1"
                                          GridPane.rowIndex="5"/>
                                <ComboBox fx:id="specialties" prefHeight="25.0" prefWidth="213.0"
                                          GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                                <TextField fx:id="timeField" editable="false" GridPane.columnIndex="1"
                                           GridPane.rowIndex="4"/>
                            </children>
                        </GridPane>
                    </children>
                </AnchorPane>
                <GridPane alignment="CENTER">
                    <columnConstraints>
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Button fx:id="backButton" alignment="CENTER" mnemonicParsing="false" onAction="#mainScreen"
                                prefHeight="30.0" prefWidth="150.0" text="Back"/>
                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#changeAppointment"
                                prefHeight="30.0" prefWidth="175.0" text="Change appointment" GridPane.columnIndex="2"/>
                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#deleteAppointment"
                                prefHeight="30.0" prefWidth="175.0" text="Cancel appointment" GridPane.columnIndex="1"/>
                    </children>
                </GridPane>
            </children>
        </VBox>
    </children>
</AnchorPane>
